                                    </tr>
                                    <tr>
                                        <td style="text-align:right"><strong>BIO</strong></td>
                                        <td style="text-align:center">:</td>
                                        <td style="text-align:left">
                                            @Html.TextAreaFor(model => model.CollectionActor.strBio, new { @rows = "5", @cols = "15" })
